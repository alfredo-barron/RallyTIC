{% extends 'base.twig' %}

{% block css %}
  <style>
    .map {
      display: block;
      width: 100%;
      height: 500px;
    }
  </style>
{% endblock %}
{% block content %}
  <div class="section no-pad-bot" id="index-banner">
    <br><br>
      <h4 class="header">Panel de administraci√≥n</h4>
      <div class='row center'>
        <div class="card">
          <div class="row">
            <div class="col-md-offset-2 col-md-8">
              <div id="map" class="map"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
        <a class="btn-floating btn-large red"><i class="material-icons">add</i></a>
        <ul>
          <li><a href="{{ urlFor('event') }}" class="btn-floating yellow darken-1"><i class="material-icons">flag</i></a></li>
          <li><a href="{{ urlFor('activity') }}" class="btn-floating green"><i class="material-icons">directions_walk</i></i></a></li>
          <li><a href="{{ urlFor('competitor') }}"  class="btn-floating blue"><i class="material-icons">group_add</i></a></li>
        </ul>
      </div>
  </div>
{% endblock %}
{% block js %}
 <script>
 $(document).ready(function() {
    var map = new GMaps({
          div: '#map',
          lat: 22.0030923,
          lng: -99.0203763,
          zoom: 15,
          enableNewStyle: true,
      });

     GMaps.geolocate({
        success: function(position) {
          map.setCenter(position.coords.latitude, position.coords.longitude);
        }
      });

 });
 </script>
{% endblock %}
