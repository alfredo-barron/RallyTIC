{% extends 'base.twig' %}

{% block content %}
<main>
  <div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <div class='row center'>
        <div class="card">
          <div class="row">
            <div class="col-md-offset-2 col-md-8">
              <div id="map"></div>
            </div>
          </div>
        </div>
      </div>

      <br>

    </div>

  <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large red">
      <i class="large mdi-content-add"></i>
    </a>
    <ul>
      <li><a class="btn-floating yellow darken-1"><i class="large mdi-content-flag"></i></a></li>
      <li><a class="btn-floating green"><i class="large mdi-maps-directions-walk"></i></a></li>
      <li><a class="btn-floating blue"><i class="large mdi-social-person-add"></i></a></li>
    </ul>
  </div>
  </div>
  </main>
{% endblock %}

{% block js %}
<script type="text/javascript" src="//maps.google.com/maps/api/js?sensor=true"></script>
<script src="{{ asset('gmaps.js') }}"></script>
<script charset="utf8">
  $(document).ready(function(){
    var map;
    map = new GMaps({
      div: '#map',
      lat: 22.0030923,
      lng: -99.0203763,
      enableNewStyle: true,
      zoom: 15
    });

    GMaps.geolocate({
      success: function(position) {
        map.setCenter(position.coords.latitude, position.coords.longitude);
      }
    });

});
</script>
{% endblock %}
{% block css %}
    <style>
  #map{
    height: 500px;
  }
  </style>
{% endblock %}
