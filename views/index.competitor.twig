{% extends 'base.twig' %}

{% block css %}
  <style>
    .map {
      display: block;
      width: 100%;
      height: 552px;
    }
  </style>
{% endblock %}
{% block content %}
  <div class="section no-pad-bot" id="index-banner">
    <br><br>
      <h4 class="header">Rallys disponibles</h4>
        <div class="row">
          <div class="col s4 m4 z-depth-0 white">
           <div class="box">
             <ul class="collection">
              <div id="listView"></div>
            </ul>
           </div>
         </div>
          <div class="col s8 m8">
            <div id="map" class="map"></div>
          </div>
        </div>
      <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
        <a class="btn-floating btn-large red"><i class="material-icons">add</i></a>
        <ul>
          <li><a href="{{ urlFor('event') }}" class="btn-floating blue"><i class="material-icons">flag</i></a></li>
          <li><a href="{{ urlFor('activity') }}" class="btn-floating orange"><i class="material-icons">directions_walk</i></i></a></li>
          <li><a href="{{ urlFor('competitor') }}"  class="btn-floating green"><i class="material-icons">group_add</i></a></li>
        </ul>
      </div>
  </div>
{% endblock %}
{% block js %}
 <script>
 $(document).ready(function() {
    var map = new GMaps({
          div: '#map',
          lat: 22.0030923,
          lng: -99.0203763,
          zoom: 15,
          enableNewStyle: true,
      });

     GMaps.geolocate({
        success: function(position) {
          map.setCenter(position.coords.latitude, position.coords.longitude);
        }
      });

     events();

     function events () {
        $.ajax({
          url: 'events',
          type: 'GET',
          dataType: 'json',
          data: '',
          success: function(data) {
            if (data.length) {
              $('#listView').empty();
              for (var i = data.length - 1; i >= 0; i--) {
                $('#listView').append('<li class="collection-item avatar"><i class="material-icons circle blue left">flag</i>Evento <br> <a href="#!" data-toggle="modal" data-id="'+data[i].id+'"><b>'+data[i].name+'</b></a><a href="#!" data-position="bottom" data-delay="50" data-tooltip="EstadÃ­stica" class="tooltipped secondary-content"><i class="material-icons">equalizer</i></a></li>');
              };
            } else {
              $('#new').show();
            };
          }
        });
      }

 });
 </script>
{% endblock %}
