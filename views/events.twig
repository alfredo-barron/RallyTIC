{% extends 'base.twig' %}

{% block content %}
  <div class="section no-pad-bot" id="index-banner">
    <br><br>
    <h4 class="header">Gestión y diseño de eventos</h4>
    <div class="col s12 m12 z-depth-0 white">
    <div class="row">
      <div class="col s12 m12">
        <ul class="tabs">
          <li class="tab col s2"><a class="active" href="#event1">Evento</a></li>
          <li class="tab col s2"><a href="#event2" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Equipos">Equipos</a></li>
          <li class="tab col s2"><a href="#event3" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Participantes">Partic.</a></li>
          <li class="tab col s2"><a href="#event4" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Actividades">Actividad</a></li>
          <li class="tab col s2"><a href="#event5" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Rutas">Ruta</a></li>
          <li class="tab col s2"><a href="#event6" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Terminado">Finalizar</a></li>
        </ul>
      </div>
      <div id="event1" class="col s12 m12 indigo lighten-4">
        <div class="row">
          <br>
          <div class="col offset-s1 s10 offset-m1 m10 z-depth-1 white">
            <form action="#" id="formEvent" name="formEvent">
              <div class="row">
                <div class="input-field col s5 offset-s1 m5 offset-m1">
                  <input id="name" name="name" type="text" class="validate" autocomplete="off">
                  <label for="name">Nombre</label>
                </div>
                <div class="input-field col s2 offset-s1 m2 offset-m1">
                  <input id="date" name="date" type="text" class="validate startTime1" autocomplete="off" data-startendelem=".endTime1" data-format="hh:mm AA" data-startend="start" data-field="time">
                  <label for="date">Fecha</label>
                </div>
                <div class="input-field col s2 m2">
                  <input id="hour" name="hour" type="text" class="validate startTime1" autocomplete="off" data-startendelem=".endTime1" data-format="hh:mm AA" data-startend="start" data-field="time">
                  <label for="hour">Hora</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s10 offset-s1 m10 offset-m1">
                  <textarea id="description" class="materialize-textarea"></textarea>
                  <label for="description">Descripción</label>
                </div>
              </div>
              <div class="center">
                <a href="#" class="waves-effect red lighten-1 btn">Cancelar</a>
                <a href="#" class="waves-effect green lighten-1 btn">Aceptar</a>
              </div>
              <br>
            </form>
          </div>
          <br><br>
        </div>
      </div>
      <div id="event2" class="col s12 m12 indigo lighten-4">
        <div class="row">
          <br>
          <div class="col offset-s1 s10 offset-m1 m10 z-depth-1 white">
            <div class="row">
              <br>
              <div class="col s6 offset-s1 m6 offset-m1">
                <div class="input-field">
                  <select id="n_teams" name="n_teams">
                    <option value="" selected>Selecciona una opcion ...</option>
                    <option value="1">1 equipo</option>
                    <option value="2">2 equipos</option>
                    <option value="3">3 equipos</option>
                    <option value="4">4 equipos</option>
                  </select>
                  <label>Número de equipos</label>
                </div>
              </div>
            <div class="col s4 m4">
              <br>
              <button id="btnAgregar" name="btnAgregar" class="waves-effect green lighten-1 btn">Agregar</button>
            </div>
          </div>
          <form action="" id="new_teams" name="new_teams">
            <div id="content" class="row"></div>
            <div id="content_btn">
              <br>
              <div class="center">
                <a id="btnCancelarTeam" name="btnCancelarTeam" class="waves-effect red lighten-1 btn">Cancelar</a>
                <a id="btnIn" name="btnIn" class="waves-effect green lighten-1 btn">Aceptar</a>
              </div>
            </div>
          </form>
          <br><br>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block js %}
  <script>
    $(document).ready(function(){

      $('#content_btn').hide();
      $('#btnAgregar').attr('disabled',false);


      //Pendiente
      $('#btnAgregar').click(function(event) {
        var equipo = $('#n_teams option:selected').val();
        if (equipo != "") {
          for (var i = 1; i <= equipo; i++) {
            $('#content').append('<div class="input-field col s8 offset-s2 m8 offset-m2"><input type="text" class="validate" id="_name_team_'+i+'" name="_name_team_'+i+'" autocomplete="off"><label for="_name_team_'+i+'"> Nombre del equipo '+i+'</label></div>');
          };
          $('#btnAgregar').attr('disabled',true);
          $('#content_btn').show();
        };
      });

      $('#btnCancelarTeam').click(function(event) {
        //$('#btnAgregar').attr('disabled',false);
        $('#content_btn').hide();
      });

  });
  </script>
{% endblock %}
