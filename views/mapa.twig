{% extends 'base.twig' %}

{% block css %}
  <style>
    .map {
      display: block;
      width: 100%;
      height: 552px;
    }
  </style>
{% endblock %}
{% block content %}
  <div class="section no-pad-bot" id="index-banner">
    <br><br>
      <h4 class="header center"><a href="javascript:history.back(1)"><i class="material-icons left small">keyboard_backspace</i></a> Ruta</h4>
        <div class="row">
          <div class="col s8 m8 offset-m2 offset-s2 z-depth-0 white">
            <div id="map" class="map"></div>
          </div>
        </div>
  </div>
{% endblock %}
{% block js %}
 <script>
 $(document).ready(function() {

    var path  = [];
    var data = [];

    var map = new GMaps({
          div: '#map',
          lat:  {{ find_activity.lat }},
          lng:  {{ find_activity.lng }},
          zoom: 18,
          enableNewStyle: true,
      });


    {% for act in activities %}
      map.addMarker({
        lat: {{ act.lat }},
        lng: {{ act.lng }},
        title: '{{ act.station }}',
        infoWindow: {
          content: '{{ act.name }}',
        }
      });
    {% endfor %}

    /*
    for (var i = 0; i < activities.length; i++) {
      path.push(activities[i].lat, activities[i].lng);
      data.push(path);
    };

    console.log(data); */

    map.drawPolyline({
      path: path,
      strokeColor: '#131540',
      strokeOpacity: 0.6,
      strokeWeight: 6
    });


 });
 </script>
{% endblock %}
